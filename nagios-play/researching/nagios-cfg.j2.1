define hostgroup {
	hostgroup_name nclient

{% for host in groups['nclient'] %}

define host {
     host_name                  {{ host }}
     use                        xiwizard_linuxserver_host
     max_check_attempts         5:q
     check_interval             5
     retry_interval             1
     check_period               xi_timeperiod_24x7
     notification_interval      60
     notification_period        xi_timeperiod_24x7
     icon_image                 centos.png
     statusmap_image            centos.png
     _xiwizard                  linux-server
     register                   1
     }


define service {
     host_name			{{ host }}
     hostgroup_name             nclient
     service_description        / Disk Usage
     use                        xiwizard_nrpe_service
     check_command              check_nrpe!check_disk!-a '-w 20% -c 10% -p /'
     max_check_attempts         5
     check_interval             5
     retry_interval             1
     check_period               xi_timeperiod_24x7
     notification_interval      60
     notification_period        xi_timeperiod_24x7
     _xiwizard                  linux-server
     register                   1
     }
{% endfor %}

